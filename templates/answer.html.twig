{% extends "layout.html.twig" %}

{% block title %}Politik - Answers{% endblock %}

{% block content %}
  {% include "menu.html.twig" with {'page': 'answers'} %}
  <div class="container-fluid">
    <div class="row" style="margin-top: 70px;">
      <div class="col-sm-offset-1 col-sm-10">
        {% for a in answers %}
          <div class="row">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="col-sm-2 col-xs-12">
                  <img alt="{{ candidates[a.question.target] }}" src="/images/can-{{ a.question.target }}.png" style="width: 50px; height: 50px;">
                  <span>&nbsp;</span>
                  <img alt="{{ categories[a.question.category] }}" src="/images/cat-{{ a.question.category }}.png" style="width: 50px; height: 50px;">
                </div>
                <div class="col-sm-10 col-xs-12">
                  <h4 style="word-break: break-word;">{{ a.question.text }}</h4>
                </div>
                <div class="col-sm-10 col-xs-12">
                  <p style="word-break: break-word;">{{ a.text }}</p>
                </div>
                <!--<div class="col-sm-2 col-xs-6" style="text-align: center;">
                  <h2 id="q-rate-{{ q.id }}" style="margin-top: 10px;">{{ q.rate }}</h2>
                </div>-->
                <div class="col-sm-2 col-xs-12" style="text-align: center;">
                  <button id="q-button-{{ q.id }}" type="button" class="btn btnUncheck" style="margin-top: 10px; width: 100px;" onclick="rateAnswer({{ a.id }})"><strong>{{ a.rate }} "J'aime"</strong> <img src="/images/check.png" style="width: 20px; height: 20px;"></button>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}