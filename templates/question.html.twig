{% extends "layout.html.twig" %}

{% block title %}Politik - Questions{% endblock %}

{% block content %}
  {% include "menu.html.twig" with {'page': 'questions'} %}
  <div class="container-fluid">
    <div class="row" style="margin-top: 70px;">
      <div class="col-sm-offset-1 col-sm-10">
        {% for q in questions %}
          <div class="row">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="col-md-2 col-xs-12">
                  <img alt="{{ candidates[q.target] }}" src="/images/can-{{ q.target }}.png" style="width: 50px; height: 50px;">
                  <span>&nbsp;</span>
                  <img alt="{{ categories[q.category] }}" src="/images/cat-{{ q.category }}.png" style="width: 50px; height: 50px;">
                </div>
                <div class="col-md-6 col-xs-12">
                  <h4 style="word-break: break-word;">{{ q.text }}</h4>
                </div>
                <div class="col-md-2 col-xs-6" style="text-align: center;">
                  <h2 id="q-rate-{{ q.id }}" style="margin-top: 10px;">{{ q.rate }}</h2>
                </div>
                <div class="col-md-2 col-xs-6" style="text-align: center;">
                  <button id="q-button-{{ q.id }}" type="button" class="btn btnUncheck" style="margin-top: 10px; width: 100px;" onclick="rateQuestion({{ q.id }})"><strong>Vote</strong> <img src="/images/check.png" style="width: 20px; height: 20px;"></button>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}